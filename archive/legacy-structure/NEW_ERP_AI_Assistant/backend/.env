# Environment Configuration dla ERP AI Assistant

# Podstawowe ustawienia aplikacji
APP_NAME=ERP AI Assistant
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Ustawienia serwera
HOST=0.0.0.0
PORT=8000

# Ustawienia bazy danych
DATABASE_URL=sqlite:///./erp_assistant.db
DATABASE_ECHO=False

# API Keys - UZUPEŁNIJ WŁASNYMI KLUCZAMI
OPENAI_API_KEY=your-openai-api-key-here
CLAUDE_API_KEY=your-claude-api-key-here
DEFAULT_AI_MODEL=gpt-3.5-turbo

# Ustawienia RAG
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
EMBEDDINGS_MODEL=sentence-transformers/all-MiniLM-L6-v2
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Ustawienia dokumentów
UPLOAD_DIRECTORY=./data/uploads
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,docx,txt,xml,html

# Ustawienia security
SECRET_KEY=your-super-secret-key-change-in-production-please
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Ustawienia cache/Redis
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Ustawienia logowania
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Ustawienia ERP Integration
COMARCH_API_URL=https://api.comarch.com
COMARCH_API_KEY=your-comarch-api-key

# Ustawienia email
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@erp-assistant.com

# Ustawienia monitoring
ENABLE_METRICS=True
METRICS_PORT=9090
